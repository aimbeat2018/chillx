<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="TooManyViews">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        shimmer:shimmer_duration="2000"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_margin="10dp"
                android:background="@color/grey_400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="40dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="160dp"
                    android:layout_margin="8dp"
                    android:background="@color/grey_400" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <View
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey_400" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <View
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey_400" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/grey_400" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <View
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey_400" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">

                <View
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:background="@color/grey_400" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@color/grey_400" />


            </LinearLayout>

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shimmer_view_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ppapplogo" />

                        <RelativeLayout
                            android:id="@+id/genre_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:focusable="true"
                            android:nextFocusLeft="@id/adView1"
                            android:nextFocusRight="@id/country_layout"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <TextView
                                android:id="@+id/tv_genre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/explore_by_genre"
                                android:textAllCaps="true"
                                android:visibility="gone" />

                            <!--                                android:textAppearance="@style/TextAppearance.Medium.Bold" />-->


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/genre_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_genre" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/lytSlider"
                                android:layout_width="match_parent"
                                android:layout_height="350dp">

                                <!-- <androidx.viewpager.widget.ViewPager
                                     android:id="@+id/viewPager"
                                     android:layout_width="match_parent"
                                     android:layout_height="400dp"
                                     android:scrollIndicators="none" />
-->

                                <RelativeLayout
                                    android:id="@+id/slider_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/white" />
                                </RelativeLayout>

                                <!-- <com.github.islamkhsh.CardSliderViewPager
                                     android:id="@+id/c_viewPager"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:fitsSystemWindows="true"
                                     app:cardSlider_pageMargin="-10dp"
                                     app:auto_slide_time="1" />-->

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/viewPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="450dp"
                                    android:layout_marginHorizontal="0dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@drawable/homesliderbackground" />

                                <!--                                    <View-->
                                <!--                                        android:id="@+id/view1"-->
                                <!--                                        android:layout_width="match_parent"-->
                                <!--                                        android:layout_height="70dp"-->
                                <!--                                        android:layout_alignParentBottom="true"-->
                                <!--                                        android:alpha="0.8"-->
                                <!--                                        android:background="@drawable/image_gradient_bg" />-->

                                <com.viewpagerindicator.LinePageIndicator
                                    android:id="@+id/indicator_unselected_background"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="-35dp"
                                    android:alpha="0.8"
                                    android:background="@drawable/image_gradient_bg"
                                    android:gravity="center"
                                    android:paddingTop="240dp"
                                    android:paddingBottom="230dp"
                                    android:visibility="visible"
                                    app:gapWidth="7dp"
                                    app:lineWidth="15dp"
                                    app:selectedColor="@color/colorAccent"
                                    app:strokeWidth="3dp"
                                    app:unselectedColor="@color/white" />

                            </RelativeLayout>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="340dp"
                                android:background="@drawable/btn_bg"
                                android:drawableLeft="@drawable/play_now_bg"
                                android:drawablePadding="10dp"
                                android:paddingHorizontal="10dp"
                                android:text="Play Now"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageButton
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="#00000000"
                                    android:iconifiedByDefault="true"
                                    android:padding="-20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ppapplogo" />

                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="10dp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginVertical="10dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageButton
                                    android:id="@+id/instalink"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginRight="3dp"
                                    android:background="#00000000"
                                    android:iconifiedByDefault="true"
                                    android:padding="-20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/insta64" />

                                <ImageButton
                                    android:id="@+id/fblink"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="3dp"
                                    android:background="#00000000"
                                    android:iconifiedByDefault="true"
                                    android:padding="-20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/fb64" />

                                <ImageButton
                                    android:id="@+id/twitterlink"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="#00000000"
                                    android:iconifiedByDefault="true"
                                    android:padding="-20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/twitter"
                                    android:visibility="gone" />

                                <ImageButton
                                    android:id="@+id/youtubelink"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="3dp"
                                    android:background="#00000000"
                                    android:iconifiedByDefault="true"
                                    android:padding="-20dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/youtube64" />


                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white" />
                            </RelativeLayout>

                            <com.github.islamkhsh.CardSliderViewPager
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                app:auto_slide_time="2"
                                app:cardSlider_cardCornerRadius="5dp"
                                app:cardSlider_otherPagesWidth="24dp"
                                app:cardSlider_pageMargin="12dp" />

                            <!--<com.github.islamkhsh.CardSliderIndicator
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/c_indicator"
                                android:layout_below="@id/c_viewPager"
                                android:layout_marginTop="8dp"
                                android:layout_centerHorizontal="true"/>-->


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone">

                            <include layout="@layout/startapp_native_ad_layout" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/adView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:focusable="true"
                            android:gravity="center"
                            android:nextFocusLeft="@id/slider_layout"
                            android:nextFocusRight="@id/genre_layout" />

                        <!--Popular stars layout-->
                        <RelativeLayout
                            android:id="@+id/popular_stars_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <TextView
                                android:id="@+id/popular_stars_layout_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:paddingTop="8dp"
                                android:text="@string/popular_stars"
                                android:textAppearance="@style/TextAppearance.Medium.Bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/popular_stars_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/popular_stars_layout_title"
                                android:layout_marginTop="8dp">

                            </androidx.recyclerview.widget.RecyclerView>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/featuredTvLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:id="@+id/tvTitleLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/featured_tv_channels"
                                    android:textAllCaps="true" />

                                <Button
                                    android:id="@+id/btn_more_tv"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:minWidth="0dp"
                                    android:text="View all"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvTitleLayout" />

                        </RelativeLayout>

                        <!--This layout is for continue watching-->
                        <LinearLayout
                            android:id="@+id/continueWatchingLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="@dimen/spacing_large">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:text="@string/continue_watching"
                                    android:textAllCaps="true" />

                                <Button
                                    android:id="@+id/continue_watching_clear_btn"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:text="@string/clear"

                                    android:textColor="@color/grey_60"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewContinueWatching"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/movieLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:id="@+id/movieTitleLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="0dp">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/trendingnow"
                                    android:textAllCaps="true" />

                                <Button
                                    android:id="@+id/btn_more_movie"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:minWidth="0dp"
                                    android:text="View all"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/movieTitleLayout"
                                android:scrollbars="vertical"
                                android:scrollingCache="true" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/tvSeriesLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/tvSeriesTitleLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/spacing_large"
                                android:paddingRight="0dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/latest_tv_series"
                                    android:textAllCaps="true" />

                                <Button
                                    android:id="@+id/btn_more_series"
                                    style="@style/Widget.AppCompat.Button.Borderless"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:minWidth="0dp"
                                    android:text="View all"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewTvSeries"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvSeriesTitleLayout"
                                android:layout_marginBottom="10dp"
                                android:scrollbars="vertical"
                                android:scrollingCache="true" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/country_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
